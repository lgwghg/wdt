<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webside.sys.mapper.ValueMapper">
	<!--mybatis ehcache缓存配置,以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache eviction="LRU" flushInterval="100000" type="org.mybatis.caches.ehcache.LoggingEhcache" />

	<!-- t_sys_value字段列表 -->
	<sql id="columnList">
		<trim suffixOverrides=",">
			id AS "id", <!-- 主键 -->
			name AS "name", <!-- 名称 -->
			status AS "status.value", <!-- 状态 -->
			create_id AS "createUser.id", <!-- 创建者id -->
			create_time AS "createTime", <!-- 创建时间 -->
			update_id AS "updateUser.id", <!-- 修改者id -->
			update_time AS "updateTime", <!-- 修改时间 -->
		</trim>
	</sql>

	<!-- 查询t_sys_value分页 -->
	<select id="queryListByPage" parameterType="map" resultType="com.webside.sys.model.ValueEntity" flushCache="false" useCache="true">
		select
		<include refid="columnList" />
		from t_sys_value
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="name != null and name != ''">
				AND lower(name) like concat('%',lower(#{name}),'%')
			</if>
			<if test="statusValue != null and statusValue != ''">
				AND status=#{statusValue}
			</if>
		</trim>
	</select>

	<!-- 根据entity查询t_sys_value -->
	<select id="queryListByEntity" resultType="com.webside.sys.model.ValueEntity" parameterType="com.webside.sys.model.ValueEntity" flushCache="false" useCache="true">
		select
		<include refid="columnList" />
		from t_sys_value
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="name != null and name != ''">
				AND name = #{name}
			</if>
			<if test="id != null and id != ''">
				AND id != #{id}
			</if>
		</trim>
	</select>

	<!-- 根据ID查询t_sys_value -->
	<select id="findById" resultType="com.webside.sys.model.ValueEntity" parameterType="String" flushCache="false" useCache="true">
		select
		<include refid="columnList" />
		from t_sys_value
		where id = #{id}
	</select>

	<!-- 新增t_sys_value -->
	<insert id="insert" parameterType="com.webside.sys.model.ValueEntity" flushCache="true">
		insert into t_sys_value
		<trim prefix="(" suffix=")" suffixOverrides=",">
			id,<!-- 主键 -->
			name,<!-- 名称 -->
			status,<!-- 状态 -->
			create_time,<!-- 创建时间 -->
			<if test="createUser != null and createUser.id != null">create_id,</if><!-- 创建者id -->
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{id},<!-- 主键 -->
			#{name},<!-- 名称 -->
			#{status.value},<!-- 状态 -->
			#{createTime},<!-- 创建时间 -->
			<if test="createUser != null and createUser.id != null">#{createUser.id},</if><!-- 创建者id -->
		</trim>
	</insert>

	<!-- 根据ID更新t_sys_value -->
	<update id="updateById" parameterType="com.webside.sys.model.ValueEntity" flushCache="true">
		update t_sys_value
		<trim prefix="SET" suffixOverrides=",">
			<if test="name != null">name=#{name},</if><!-- 名称 -->
			<if test="status != null and status.value != null">status=#{status.value},</if><!-- 状态 -->
			<if test="updateUser != null and updateUser.id != null">update_id=#{updateUser.id},</if><!-- 修改者 -->
			update_time=#{updateTime},<!-- 修改时间 -->
		</trim>
		where id = #{id}
	</update>

	<!-- 根据ID删除t_sys_value -->
	<delete id="deleteById" parameterType="String" flushCache="true">
		delete from t_sys_value
		where id = #{id}
	</delete>
</mapper>